{
  "name": "optimized-images-loader",
  "version": "0.4.0",
  "description": "Automatically optimize images in webpack projects.",
  "keywords": [
    "webpack",
    "loader",
    "images",
    "optimize"
  ],
  "author": "Cyril Wanner <info@cyr.li>",
  "homepage": "https://github.com/cyrilwanner/optimized-images-loader#readme",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "babel src --out-dir lib --delete-dir-on-start --extensions \".ts\"",
    "build:js:watch": "npm run build:js -- --watch --verbose",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "tsc --noEmit && eslint . --ext .ts --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:unit:watch": "npm test -- --watch",
    "test:e2e": "ts-node-script __tests__/e2e/run",
    "test:e2e:watch": "WATCH=true npm run test:e2e",
    "pretest:e2e": "ts-node-script __tests__/e2e/build",
    "test:e2e:cypress": "cd __tests__/e2e && cypress run",
    "test:e2e:cypress:watch": "cd __tests__/e2e && cypress open"
  },
  "dependencies": {
    "@wasm-codecs/gifsicle": "^1.0.0",
    "@wasm-codecs/mozjpeg": "^1.0.1",
    "@wasm-codecs/oxipng": "^1.0.1",
    "file-loader": "^6.0.0",
    "get-rgba-palette": "^2.0.1",
    "loader-utils": "^2.0.0",
    "schema-utils": "^2.6.6",
    "sharp": "^0.25.3",
    "svgo": "^1.3.2",
    "url-loader": "^4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.0",
    "@types/loader-utils": "^2.0.0",
    "@types/node": "^14.0.27",
    "@types/rimraf": "^3.0.0",
    "@types/sharp": "^0.25.0",
    "@types/svgo": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-loader": "^8.1.0",
    "cypress": "^4.12.1",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.3",
    "express": "^4.17.1",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0"
  },
  "main": "lib/index.js",
  "types": "images.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "images.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyrilwanner/optimized-images-loader.git"
  },
  "bugs": {
    "url": "https://github.com/cyrilwanner/optimized-images-loader/issues"
  }
}
